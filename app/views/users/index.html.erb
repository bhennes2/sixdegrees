<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Dob</th>
    <th>Father first name</th>
    <th>Father last name</th>
    <th>Mother first name</th>
    <th>Mother last name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.dob %></td>
    <td><%= user.father_first_name %></td>
    <td><%= user.father_last_name %></td>
    <td><%= user.mother_first_name %></td>
    <td><%= user.mother_last_name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

